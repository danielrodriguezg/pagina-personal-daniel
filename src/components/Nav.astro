</nav>
<script>
  function handleClick() {
    let hamburguer = document.querySelector("#nav-icon");
    hamburguer?.classList.toggle("open");
  }
  document.getElementById("nav-icon")!.addEventListener("click", handleClick);
</script>

<style>
  nav {
    display: flex;
    padding: 0.5rem;
    justify-content: space-between;
    align-items: center;
    background: var(--c-bg);
  }
  #nav-icon {
    width: 35px;
    height: 30px;
    position: relative;
    transform: rotate(0deg);
    transition: 0.5s ease-in-out;
    cursor: pointer;
    margin: 0.25em;
  }
  #nav-icon:hover span {
    background: var(--c-gray);
  }
  #nav-icon span {
    display: block;
    position: absolute;
    height: 4px;
    width: 100%;
    background: var(--c-white);
    border-radius: 9px;
    opacity: 1;
    left: 0;
    transform: rotate(0deg);
    transition: 0.25s ease-in-out;
  }
  #nav-icon span:nth-child(1) {
    top: 0px;
  }

  #nav-icon span:nth-child(2),
  #nav-icon span:nth-child(3) {
    top: 12px;
  }

  #nav-icon span:nth-child(4) {
    top: 24px;
  }

  #nav-icon.open span {
    background: var(--c-blue);
  }

  #nav-icon.open span:nth-child(1) {
    top: 12px;
    width: 0%;
    left: 50%;
  }

  #nav-icon.open span:nth-child(2) {
    transform: rotate(45deg);
  }

  #nav-icon.open span:nth-child(3) {
    transform: rotate(-45deg);
  }

  #nav-icon.open span:nth-child(4) {
    top: 12px;
    width: 0%;
    left: 50%;
  }
  .title a {
    cursor: pointer;
  }
  .monogram {
    font-family: "Cookie";
    font-size: 50px;
    color: var(--c-white);
    transform: skew(-35deg) rotate(-25deg);
    text-align: center;
  }
  .monogram:hover {
    color: var(--c-gray);
  }
  .links {
    display: flex;
    gap: 20px;
  }
  .links a:hover .socialIcon {
    fill: var(--c-blue);
  }
  .socialIcon {
    fill: var(--c-gray);
    transition: fill linear 300ms;
    cursor: pointer;
  }

  .title {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 20px;
  }
  .title h3 {
    color: var(--c-white);
    overflow: hidden;
    font-family: monospace;
    letter-spacing: 0.15em;
    border-right: 0.15em solid var(--c-blue);
    animation: typing 2s steps(22, end), blink-caret 0.75s step-end infinite;
  }
  @keyframes typing {
    from {
      width: 0;
    }
    to {
      width: 100%;
    }
  }

  @keyframes blink-caret {
    from,
    to {
      border-color: transparent;
    }
    50% {
      border-color: var(--c-blue);
    }
  }
</style>
